<%= form_for [:user,@challenge] do |f| %>
<%= f.text_field :title %>
<%= f.text_area :terms, size: "30x5" %>
<%= f.text_field :reward %>
<%= f.datetime_field :end_date %>
<%= f.submit "Send Challenge"%>
<% end %>
<h3>Challenges Created</h3>
<table>
 <tr><th>Challenge Title</th><th>End Date</th><th>Challengee</th><th>Status</th><th>Winner</th></tr>
<% @challenges_created.each do |challenge| %>
    <tr><td><%=challenge.title%></td><td><%=challenge.end_date%></td><td><%=challenge.challengee.username%></td><td><%=challenge.status.condition%></td><td><%=challenge.winner.username unless challenge.winner.nil?%></td></tr>
  <% end %>
</table>
<h3>Challenges Received</h3>
<table>
  <tr><th>Challenge Title</th><th>End Date</th><th>Challenger</th><th>Status</th><th>Winner</th></tr>
  <% @challenges_received.each do |challenge| %>
    <tr><td><%=challenge.title%></td><td><%=challenge.end_date%></td><td><%=challenge.challenger.username%></td><td><%=challenge.status.condition%></td><td><%=challenge.winner.username unless challenge.winner.nil?%></td></tr>
  <% end %>
</table>
